                 </foreach>
             </trim>
             where username = ${maps.username}
         </foreach>
     </update>-->
    <insert id="saveRightChoiceByExcel" parameterType="java.util.List">
        <foreach collection="list" index="index" item="item" separator=",">
            insert into question_answer(question_id, right_choice_name)
            VALUES(#{item.id},#{item.rightChoice})
        </foreach>
    </insert>
    <insert id="saveQuestionChoiceByExcel" parameterType="java.util.List">
        insert into question_choice(question_id,choice_name,choice)
        values
        <foreach collection="list" index="index" item="item" separator=",">
            (#{item.questionId},#{item.choiceName},#{item.choice})
        </foreach>
    </insert>
</mapper>